<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { multipart: true }) do |f| %>
  <%= devise_error_messages! %>
<legend>Tus Datos</legend>
 <%= f.fields_for :estudiante do |e| %>
 <div class="span5">
            <%= image_tag @user.estudiante.foto, height: '80', width: '80' %>
            <%= e.label 'tu Rut', :class => 'control-label' %>
            <%= e.text_field :rut, :class => 'control-text' %>
            <%= e.label 'Como te llamas?', :class => 'control-label' %>
            <%= e.text_field :nombre %>
            <%= e.label 'describete en 140 caracteres !', :class => 'control-label' %>
            <%= e.text_area :bio, size: "2x3"%>
            <%= e.label 'Tu foto!', :class => 'control-label' %>
            <%= e.text_field :foto %>
            <%= e.label 'tu direccion?', :class => 'control-label' %>
            <%= e.text_field :direccion %>
            <%= e.label 'Tu telefono?', :class => 'control-label' %>
            <%= e.text_field :telefono %>
            
</div>
 <div class="span5">
            <%= e.label 'Que carrera estudiaste?', :class => 'control-label' %>
            <%= e.collection_select(:carrera_id, Carrera.all, :id, :nombre, :prompt => "Seleccione") %>
            <%= e.label 'En que comuna vives?', :class => 'control-label' %>
            <%= e.collection_select(:comuna_id, Comuna.all, :id, :nombre, :prompt => "Seleccione") %>
            <%= e.label 'Donde estudiaste?', :class => 'control-label' %>
            <%= e.collection_select(:institucion_id, Institucion.all, :id, :nombre, :prompt => "Seleccione") %>
<% end %>
            <%= f.label 'Cual es tu email?', :class => 'control-label' %>
            <%= f.email_field :email, :disabled => true %>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  Currently waiting confirmation for: <%= resource.unconfirmed_email %>
<% end %>
        <!--    <%= f.label 'password', :class => 'control-label' %> <i>(Dejar en blanco si no quieres cambiar tu contraseña)</i></label>
            <%= f.password_field :password, :autocomplete => "off", :disabled => true %>
            <%= f.label 'password confirmacion', :class => 'control-label' %>
            <%= f.password_field :password_confirmation, :disabled => true %>-->
            <%= f.label '(ingresa tu contraseña para confirmar los cambios)' %>
            <%= f.password_field :current_password %>
</form>

<div class="form-actions"> 
          <%= f.submit "Update", :class => 'btn btn-primary' %>
           <!--button_to "Eliminar mi cuenta", registration_path(resource_name), :data => { :confirm => "Estas seguro?" }, :method => :delete, :class => 'btn btn-danger' -->
</form>
</div>
<% end %>
